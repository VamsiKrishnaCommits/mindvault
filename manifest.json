{
  "manifest_version": 3,
  "name": "Knowledge Keeper",
  "version": "1.0",
  "description": "Save and classify tweets for your personal knowledge base",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "ai.languageModel"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js","popup.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 